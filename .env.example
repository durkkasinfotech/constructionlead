# ============================================
# Construction Lead Management - Environment Variables Example
# Copy this file to .env and fill in your actual values
# ============================================

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=construction_leads
DB_USER=postgres
DB_PASSWORD=

# Database Connection String (Alternative)
DATABASE_URL=postgresql://postgres:password@localhost:5432/construction_leads

# Supabase Configuration (if using Supabase)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp
VITE_UPLOAD_ENDPOINT=/api/upload

# Application Configuration
VITE_APP_NAME=LeadPro
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Lead Number Configuration
VITE_LEAD_PREFIX=LEAD
VITE_LEAD_YEAR_FORMAT=YYYY

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@leadpro.com

# WhatsApp API (optional - for notifications)
WHATSAPP_API_URL=https://api.whatsapp.com/send
WHATSAPP_BUSINESS_NUMBER=

# Security
JWT_SECRET=
SESSION_SECRET=

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=false
VITE_ENABLE_AUTO_SAVE=true

# Image Storage (Cloudinary/AWS S3)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AWS S3 (Alternative)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET=construction-lead-photos

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development
NODE_ENV=development
PORT=3000
